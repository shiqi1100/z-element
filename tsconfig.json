{
  "compilerOptions": {
    // 打包的目标语法
    "target": "ESNext",
    // 模块转换后的格式
    "module": "ESNext",
    // 支持模块转换
    "esModuleInterop": true,
    // 跳过类库检测
    "skipLibCheck": true,
    // 强制区分大小写
    "forceConsistentCasingInFileNames": true,
    // 模块解析方式
    "moduleResolution": "node",
    // 不转化jsx
    "jsx": "preserve",
    // 生成声明文件
    "declaration": true,
    // 生成映射文件
    "sourceMap": true
  }
}
